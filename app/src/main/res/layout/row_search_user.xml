<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundMain">

    <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginVertical="@dimen/dimen_8"
        android:layout_marginLeft="@dimen/dimen_16"
        android:background="@drawable/img_circle_bg"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/funny_user1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_16"
        android:maxLines="1"
        android:paddingStart="@dimen/dimen_8"
        android:text="sadfsadfdsfasdsafdfsdafsadfsdafsdaasdffdsfsdfsdfsdafsdsdf"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/ivProfilePic"
        app:layout_constraintLeft_toRightOf="@id/ivProfilePic"
        app:layout_constraintRight_toLeftOf="@id/linBtnFollow"
        app:layout_constraintTop_toTopOf="@id/ivProfilePic" />

    <LinearLayout
        android:id="@+id/linBtnFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/dimen_16"
        android:background="@drawable/rounded_border_white"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tvUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvUsername">

        <TextView
            android:id="@+id/tvFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_12"
            android:layout_marginVertical="@dimen/dimen_4"
            android:text="@string/follow"
            android:textColor="@color/white"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dimen_16"
        android:background="@color/grey800"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>