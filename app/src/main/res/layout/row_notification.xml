<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundMain"
    android:paddingVertical="@dimen/dimen_8">

    <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/dimen_16"
        android:background="@drawable/img_circle_bg"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/funny_user1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/ivProfilePic"
        app:layout_constraintRight_toLeftOf="@id/frame_content"
        app:layout_constraintTop_toTopOf="@id/ivProfilePic">

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16"
            android:clickable="true"
            android:focusable="true"
            android:text=""
            android:textColor="@color/white"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/tvSubMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16"
            android:clickable="true"
            android:ellipsize="end"
            android:focusable="true"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/white"
            android:textIsSelectable="false" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivProfilePic">

        <ImageView
            android:id="@+id/ivContent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/dimen_16"
            android:clickable="true"
            android:focusable="true"
            android:src="@color/white"
            android:visibility="visible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivProfilePic" />

        <LinearLayout
            android:id="@+id/linBtnFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/dimen_16"
            android:background="@drawable/rounded_border_white"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivProfilePic">

            <TextView
                android:id="@+id/tvFollow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_12"
                android:layout_marginVertical="@dimen/dimen_4"
                android:text="@string/follow"
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium"
                android:textStyle="bold" />
        </LinearLayout>


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>